<%- include('partials/head') %>
  <script defer src="/js/viewapplications.js"></script>
  <script>let searchResults;</script>
  <title>Portal3d</title>
  </head>

  <body class="container">


    <%- include('partials/header') %>


     
        <div class="titleDash">
          <h1>Planning Applications</h1>
          <input type="text" name="applicationSearchBox" id="applicationSearchBox" placeholder="Search" />
          <button name="searchSubmit" id="searchSubmit">Search</button>
        </div>

        <div class="scrollingAreaLarger">
          <table class="table table-inverse" id="resultsTable">
            <thead>
              <tr>
                <th>Reference</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date Created</th>
                <th></th>
              </tr>
            </thead>

            <tbody id="tbodyid">
              <% for(var i=0; i < apps.length; i++) { %>
                <tr>
                  <td>
                    <%= apps[i].planningID %>
                  </td>
                  <td>
                    <%= apps[i].title %>
                  </td>
                  <td>
                    <%= apps[i].description %>
                  </td>
                  <td>
                    <%= apps[i].dateCreated.toLocaleDateString('en-GB', { year: 'numeric' , month: 'long' ,
                      day: 'numeric' }); %>
                  </td>
                  <td>
                    <button class="view" id="view_<%= apps[i].planningID %>"> View </button>
                  </td>
                </tr>
                <% } %>
            </tbody>

          </table>
        </div>

    


      <%- include('partials/footer') %>